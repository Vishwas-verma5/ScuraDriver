<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBalance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:orientation="vertical"
           android:background="#F5F5F5">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_arrow_vector_assets"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_30sdp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="₹ 709"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_30sdp"
                android:textColor="@color/scurafont"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="Current balance"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="icon"
                android:gravity="center"
                android:id="@+id/icon"
                android:padding="10dp"
                android:background="@drawable/large_circle"
                android:textSize="@dimen/_20sdp"
                android:backgroundTint="#17AA52"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/icon"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="You have negative balance.
Take more rides to
automatically repay or make a
payment."/>

            <TextView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:layout_below="@id/icon"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                android:background="@color/black"
                android:text="Pay     ₹700.96"
                tools:ignore="RtlCompat" />
        </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:text="12 May" />

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="icon"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/large_circle"
                android:textSize="@dimen/_20sdp"
                android:backgroundTint="#17AA52"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="No Bank Transfer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:text="No Balance to paid today"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"

                android:src="@drawable/right_arrow_vector_assets"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="#F5F5F5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:text="12 May" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="icon"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/large_circle"
                android:textSize="@dimen/_20sdp"
                android:backgroundTint="#17AA52"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="No Bank Transfer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:text="No Balance to paid today"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"

                android:src="@drawable/right_arrow_vector_assets"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>